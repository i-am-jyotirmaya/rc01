{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "App Backend: Debug (watch)",
      "cwd": "${workspaceFolder}/apps/app-backend",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "dev",
        "--",
        "--inspect"
      ],
      "envFile": "${workspaceFolder}/apps/app-backend/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "autoAttachChildProcesses": true
    }
  ]
}
