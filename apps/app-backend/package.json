{
  "name": "@rc01/app-backend",
  "private": true,
  "version": "0.1.0",
  "description": "Core authentication and orchestration backend for CodeBattle Arena",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --tsconfig tsconfig.json src/index.ts",
    "build": "tsc -b tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:up": "docker compose -f apps/app-backend/docker-compose.yml up --build",
    "docker:down": "docker compose -f apps/app-backend/docker-compose.yml down",
    "docker:logs": "docker compose -f apps/app-backend/docker-compose.yml logs -f",
    "test": "vitest run",
    "test:watch": "vitest",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@rc01/db": "workspace:^",
    "@rc01/realtime-utils": "workspace:^",
    "@rc01/file-manager": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "socket.io": "^4.7.5",
    "sharp": "^0.33.5",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.12",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "vitest": "^2.1.4"
  }
}
