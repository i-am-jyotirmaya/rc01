{
  "name": "@rc01/db",
  "version": "0.1.0",
  "description": "Database utilities for CodeBattle Arena backend",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^5.21.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.12",
    "prisma": "^5.21.1",
    "typescript": "~5.8.3"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "echo 'no build step required'",
    "check-types": "tsc --noEmit",
    "prisma:generate": "pnpm run prisma:generate:postgres && pnpm run prisma:generate:sqlite",
    "prisma:generate:postgres": "prisma generate --schema=prisma/schema.postgres.prisma",
    "prisma:generate:sqlite": "prisma generate --schema=prisma/schema.sqlite.prisma"
  }
}
