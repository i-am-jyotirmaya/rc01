{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "erasableSyntaxOnly": false,
    "paths": {
      "@rc01/api-client": [
        "packages/api-client/src/index.ts"
      ],
      "@rc01/api-client/*": [
        "packages/api-client/src/*"
      ],
      "@rc01/file-manager": [
        "packages/file-manager/src/index.ts"
      ],
      "@rc01/file-manager/*": [
        "packages/file-manager/src/*"
      ],
      "@rc01/problem-template": [
        "packages/problem-template/src/index.ts"
      ],
      "@rc01/problem-template/*": [
        "packages/problem-template/src/*"
      ],
      "@rc01/markdown-tools": [
        "packages/markdown-tools/src/index.ts"
      ],
      "@rc01/markdown-tools/*": [
        "packages/markdown-tools/src/*"
      ]
    }
  }
}